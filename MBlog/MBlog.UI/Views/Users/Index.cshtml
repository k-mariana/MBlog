@model IEnumerable<MBlog.UI.Models.DTO.UserDto>
@{
}

<h1 class="mt-3">Users</h1>

<div class="d-flex justify-content-end">
    <a class="btn btn-secondary" asp-controller="Users" asp-action="Add">Add User</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>FirstName</th>
            <th>LastName</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>
                    <a asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-light">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
